<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


	<record id="easy_invoice_customer_form_inherit" model="ir.ui.view">
        <field name="model">easy.invoice</field>
        <field name="name">Easy Invoice Inherit Sabores</field>
        <field name="inherit_id" ref="easy_invoice.easy_invoice_customer_form" />
        <field name="arch" type="xml">

            <xpath expr="//notebook"  position="inside">
                <page  name="pricelist_id_page" string="Pricelist">
                    <group >
                        <field name="pricelist_id" />
                    </group>
               </page>
            </xpath>
            
            <xpath expr="//field[@name='invoice_line_ids']"  position="attributes">
                 <attribute name="context">{'default_pricelist_id': pricelist_id}</attribute>
            </xpath> 
 
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"  position="after">
                <field name="pricelist_id" invisible="0" />
                <field name="pricelist_product_list_ids" invisible="0" />
            </xpath>
 
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"  position="attributes">
                <attribute name="domain">"[('id','in',pricelist_product_list_ids)]" </attribute>
            </xpath>
<!-- -->

        </field>
    </record>

 
  </data>
</odoo>

