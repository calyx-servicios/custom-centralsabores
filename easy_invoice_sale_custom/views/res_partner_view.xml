<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


	<record id="easy_res_partner_form_inherit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="name">Res Partner Inherit</field>
        <field name="inherit_id" ref="easy_invoice_partner_cc.easy_res_partner_form" />
        <field name="arch" type="xml">


            <xpath expr="//field[@name='total_amount_debit']" position="after">
                <field name="default_product_pricelist_id"/>
            </xpath>


        </field>
    </record>

    <record id="easy_res_partner_view_partner_form_inherit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="name">Res Partner Inherit</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">

            <page name="internal_notes" position="after">
                <page name="default_central_cost_page" string="Default Central Cost Easy">
                    <group>
                        <field name="default_cost_center_sale_id"/>
                    </group>
                </page>
            </page>



        </field>
    </record>

 
  </data>
</odoo>

