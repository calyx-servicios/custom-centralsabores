<odoo>
    <template id="portal_my_home_easy_invoice" name="Portal My Home : easy invoice entries" inherit_id="portal.portal_my_home" priority="1">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Easy Invoice</t>
                <t t-set="url" t-value="'/my/easy_invoices'"/>
            </t>
        </xpath>
    </template>

